{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "target": "es2017",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist/esm",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.e2e.ts", "dist"]
}
